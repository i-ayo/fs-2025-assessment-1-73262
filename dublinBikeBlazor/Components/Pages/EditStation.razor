@* @page "/stations/edit/{Number:int}"
@using dublinBikeBlazor.DTO
@using dublinBikeBlazor.Services
@inject IStationsApiClient ApiClient
@inject NavigationManager Nav

<h2>Edit Station</h2>

@if (station is null)
{
    <p>Loading…</p>
}
else
{
    <input @bind="station.Name" />
    <input type="number" @bind="station.AvailableBikes" />
    <select @bind="station.Status">
        <option value="OPEN">OPEN</option>
        <option value="CLOSED">CLOSED</option>
    </select>

    <button @onclick="Save">Save</button>
    <button @onclick="Cancel">Cancel</button>
}

@code {
    [Parameter] public int Number { get; set; }
    BikeStationDto? station;

    protected override async Task OnInitializedAsync()
    {
        station = await ApiClient.GetStationAsync(Number.ToString());
    }

    async Task Save()
    {
        await ApiClient.UpdateStationAsync(station!);
        Nav.NavigateTo("/stations");
    }

    void Cancel() => Nav.NavigateTo("/stations");
}
 *@