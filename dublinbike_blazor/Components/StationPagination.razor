@if (TotalPages > 1)
{
    <div class="bg-white rounded-lg shadow p-4 mt-6">
        <div class="flex items-center justify-between">
            <div class="text-sm text-gray-700">
                Showing page <span class="font-semibold">@CurrentPage</span> of <span class="font-semibold">@TotalPages</span>
                <span class="text-gray-500">(@TotalCount total items)</span>
            </div>

            <nav class="flex items-center space-x-2" aria-label="Pagination">
                <button 
                    @onclick="() => ChangePage(1)"
                    disabled="@(CurrentPage == 1)"
                    class="@GetButtonClass(CurrentPage == 1)"
                    aria-label="First page">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"/>
                    </svg>
                </button>

                <button 
                    @onclick="() => ChangePage(CurrentPage - 1)"
                    disabled="@(CurrentPage == 1)"
                    class="@GetButtonClass(CurrentPage == 1)"
                    aria-label="Previous page">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </button>

                @foreach (var page in GetPageNumbers())
                {
                    if (page == -1)
                    {
                        <span class="px-3 py-1 text-gray-500">...</span>
                    }
                    else
                    {
                        <button 
                            @onclick="() => ChangePage(page)"
                            class="@GetPageButtonClass(page)"
                            aria-label="@($"Page {page}")"
                            aria-current="@(page == CurrentPage ? "page" : null)">
                            @(page)
                        </button>
                    }
                }

                <button 
                    @onclick="() => ChangePage(CurrentPage + 1)"
                    disabled="@(CurrentPage >= TotalPages)"
                    class="@GetButtonClass(CurrentPage >= TotalPages)"
                    aria-label="Next page">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </button>

                <button 
                    @onclick="() => ChangePage(TotalPages)"
                    disabled="@(CurrentPage >= TotalPages)"
                    class="@GetButtonClass(CurrentPage >= TotalPages)"
                    aria-label="Last page">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
                    </svg>
                </button>
            </nav>
        </div>
    </div>
}

@code {
    [Parameter] public int CurrentPage { get; set; } = 1;
    [Parameter] public int TotalCount { get; set; }
    [Parameter] public int PageSize { get; set; } = 20;
    [Parameter] public EventCallback<int> OnPageChanged { get; set; }

    private int TotalPages => (int)Math.Ceiling((double)TotalCount / PageSize);

    private async Task ChangePage(int page)
    {
        if (page >= 1 && page <= TotalPages && page != CurrentPage)
        {
            await OnPageChanged.InvokeAsync(page);
        }
    }

    private string GetButtonClass(bool disabled)
    {
        var baseClass = "px-3 py-2 border rounded-md transition-colors";
        if (disabled)
        {
            return $"{baseClass} border-gray-200 text-gray-400 cursor-not-allowed";
        }
        return $"{baseClass} border-gray-300 text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500";
    }

    private string GetPageButtonClass(int page)
    {
        var baseClass = "px-3 py-2 border rounded-md transition-colors";
        if (page == CurrentPage)
        {
            return $"{baseClass} border-blue-500 bg-blue-600 text-white font-semibold";
        }
        return $"{baseClass} border-gray-300 text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500";
    }

    private List<int> GetPageNumbers()
    {
        var pages = new List<int>();
        var maxPagesToShow = 5;

        if (TotalPages <= maxPagesToShow)
        {
            for (int i = 1; i <= TotalPages; i++)
            {
                pages.Add(i);
            }
        }
        else
        {
            pages.Add(1);

            var start = Math.Max(2, CurrentPage - 1);
            var end = Math.Min(TotalPages - 1, CurrentPage + 1);

            if (start > 2)
            {
                pages.Add(-1); // ellipsis
            }

            for (int i = start; i <= end; i++)
            {
                pages.Add(i);
            }

            if (end < TotalPages - 1)
            {
                pages.Add(-1); // ellipsis
            }

            pages.Add(TotalPages);
        }

        return pages;
    }
}